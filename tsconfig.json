{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.d.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.vue"
  ],
  "exclude": ["**/*.spec.ts", "dist"]
}
